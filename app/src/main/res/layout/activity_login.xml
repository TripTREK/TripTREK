<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    tools:context=".Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:srcCompat="@drawable/triptreklogo" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:hint="Username"
            android:gravity="center"
            android:background="@drawable/rounded_textfield"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:hint="Email"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_textfield"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:hint="Password"
            android:gravity="center"
            android:inputType="textPassword"
            android:background="@drawable/rounded_textfield" />

        <Button
            android:id="@+id/SignInButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Sign In"
            android:background="@drawable/rounded_regular_signin"
            android:textColor="#FFFF"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <Button
            android:id="@+id/SignUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Sign Up"
            android:background="@drawable/rounded_regular_signup"
            android:textColor="#FFFF"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/FacebookSignInButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Log In With Facebook"
            android:background="@drawable/rounded_fb_signin"
            android:textColor="#FFFF"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/TwitterSignInButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Log In With Twitter"
            android:background="@drawable/rounded_twitter_signin"
            android:textColor="#FFFF"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/GmailSignInButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Log In With Google"
            android:background="@drawable/rounded_gmail_signin"
            android:textColor="#FFFF"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>
    </LinearLayout>

</ScrollView>